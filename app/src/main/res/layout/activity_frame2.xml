<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Logo kedua -->
    <ImageView
        android:id="@+id/logo2"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Gambar Suhu -->
    <ImageView
        android:id="@+id/logoSuhu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logosuhu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo2" />

    <!-- Tombol Load Data -->

    <!-- Tombol Kembali ke Frame 1 -->

    <!-- TextView untuk menampilkan data cuaca -->

    <Button
        android:id="@+id/btnLoadSuhu"
        android:layout_width="131dp"
        android:layout_height="55dp"
        android:layout_marginTop="184dp"
        android:backgroundTint="#0cc0df"
        android:text="VIEW SUHU"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoSuhu" />

    <Button
        android:id="@+id/btnBackToFrame1"
        android:layout_width="116dp"
        android:layout_height="57dp"
        android:layout_marginTop="552dp"
        android:backgroundTint="#d862b4"
        android:text="BACK"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.236"
        app:layout_constraintStart_toEndOf="@+id/btnLoadSuhu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDataCuaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:fontFamily="@font/roboto_bold"
        android:padding="16dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:text="COLD/HOT?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
